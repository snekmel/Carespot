<Window x:Class="Carespot.Inlogscherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carespot"
        mc:Ignorable="d"
        Title="Inlogscherm" Height="250" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="76*" />
            <ColumnDefinition Width="64*" />
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Voer uw gegevens in om in te loggen" Grid.Column="1" HorizontalAlignment="Left" Margin="25,13,0,0" VerticalAlignment="Top" FontSize="21.333" Grid.ColumnSpan="2" Width="372" />
        <Label x:Name="label1" Content="Email:" HorizontalAlignment="Left" Margin="84,68,0,0" VerticalAlignment="Top" FontSize="18.667" Grid.Column="1" />
        <Label x:Name="label2" Content="Wachtwoord:" Grid.Column="1" HorizontalAlignment="Left" Margin="25,108,0,0" VerticalAlignment="Top" FontSize="18.667" />
        <TextBox x:Name="tbEmail" Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="154,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" />
        <PasswordBox x:Name="pbWachtwoord" Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="154,120,0,0" VerticalAlignment="Top" Width="232" KeyDown="pbWachtwoord_KeyDown" />
        <Button x:Name="btAanmelden" Content="Registreren" Grid.Column="1" HorizontalAlignment="Left" Margin="213,176,0,0" VerticalAlignment="Top" Width="85" Grid.ColumnSpan="2" Click="btAanmelden_Click" />
        <Button x:Name="btInloggen" Content="Log in" Grid.Column="2" HorizontalAlignment="Left" Margin="81,176,0,0" VerticalAlignment="Top" Width="75" Click="btInloggen_Click" />
        <Button x:Name="btRfid" Content="Login met RFID" Grid.Column="1" HorizontalAlignment="Left" Margin="49,176,0,0" VerticalAlignment="Top" Width="95" Click="BtRfid_OnClick"/>
    </Grid>
</Window>