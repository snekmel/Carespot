<Window x:Class="Carespot.CliëntOverzicht"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carespot"
        mc:Ignorable="d"
        Title="CliëntOverzicht" Height="770" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*" />
            <ColumnDefinition Width="307*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="btnKoppelingOngedaanMaken" Content="Koppeling ongedaan maken" Grid.Column="1" HorizontalAlignment="Left" Margin="187,324,0,0" VerticalAlignment="Top" Width="176" Click="btnKoppelingOngedaanMaken_Click" />
        <Label x:Name="lblKoppelingHulpopdracht" Content="Deze hulpopdracht heeft al een vrijwilliger. " Grid.Column="1" HorizontalAlignment="Left" Margin="163,293,0,0" VerticalAlignment="Top" Width="259" />
        <ListView x:Name="lvReacties" HorizontalAlignment="Left" Height="600" Margin="50,128,0,0" VerticalAlignment="Top" Width="519" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Naam" Width="150" DisplayMemberBinding="{Binding Vrijwilliger.Naam}" />
                    <GridViewColumn Header="Bericht" Width="310" DisplayMemberBinding="{Binding Bericht}" />
                    <GridViewColumn Width="25">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="✓" Click="AcepteerOpdracht" CommandParameter="{Binding}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Width="25">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="X" Click="AfwijzenOpdracht" CommandParameter="{Binding}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Image x:Name="imgUitloggen" HorizontalAlignment="Left" Height="41" Margin="562,15,0,0" VerticalAlignment="Top" Width="41" Source="image/sign-out-option.png" RenderTransformOrigin="0.463,0.512" Grid.Column="1" MouseLeftButtonUp="imgUitloggen_MouseLeftButtonUp" />

        <Label x:Name="lblVoegHulpvraagToe" Content="Voeg hulpvraag toe" HorizontalAlignment="Left" Margin="229,15,0,0" VerticalAlignment="Top" FontSize="18" Grid.Column="1" Height="34" Width="166" />
        <Label Content="Mijn opdrachten" HorizontalAlignment="Left" Margin="52,102,0,0" VerticalAlignment="Top" FontSize="14" Height="29" Width="112" />
        <Label Content="Reacties van vrijwilligers" HorizontalAlignment="Left" Margin="248,102,0,0" VerticalAlignment="Top" FontSize="14" Grid.Column="1" Height="29" Width="162" />

        <Label x:Name="lblNaam" Content="Naam" HorizontalAlignment="Left" Margin="69,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.5" FontSize="16" Height="28" Width="233" Grid.ColumnSpan="2" />

        <Image x:Name="imgGebruiker" HorizontalAlignment="Left" Height="41" Margin="28,22,0,0" VerticalAlignment="Top" Width="41" MouseLeftButtonUp="imgGebruiker_MouseLeftButtonUp_1" />

        <ListView x:Name="lvMijnOpdrachten" HorizontalAlignment="Left" Height="600" Margin="28,128,0,0" VerticalAlignment="Top" Width="183" Grid.ColumnSpan="2" SelectionChanged="lvMijnOpdrachten_SelectionChanged" MouseDoubleClick="lvMijnOpdrachten_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="177" Header=" Opdrachtnaam" DisplayMemberBinding="{Binding Titel}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Image x:Name="imgAddHulpvraag" Grid.Column="1" HorizontalAlignment="Left" Height="39" Margin="184,10,0,0" VerticalAlignment="Top" Width="45" Source="image/add-square-button.png" MouseLeftButtonUp="imgAddHulpvraag_MouseLeftButtonUp" />
    </Grid>
</Window>