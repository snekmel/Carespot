<Window x:Class="Carespot.ReactieOpHulpvraag"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carespot"
        mc:Ignorable="d"
        Title="Carespot" Height="300" Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btInsturen" Content="Insturen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="110,239,0,0" Click="btInsturen_Click"/>
        <TextBox x:Name="tbReactie" HorizontalAlignment="Left" Height="224" TextWrapping="Wrap" Text="Schrijf een bericht..." VerticalAlignment="Top" Width="272" Margin="10,10,0,0" SelectionChanged="tbReactie_SelectionChanged"/>

    </Grid>
</Window>
